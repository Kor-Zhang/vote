	<!-- 用户模块的package -->
	<package name="users-package" namespace="/users" extends="base-package">
		<!-- 全局的result -->
		<global-results>
			<result name="index">/view/protected/index.jsp</result>
			<result name="regist">/view/regist.jsp</result>
			<result name="login">/view/login.jsp</result>
			
			<result name="rindex" type="redirect">/view/protected/index.jsp</result>
			<result name="rregist" type="redirect">/view/regist.jsp</result>
			<result name="rlogin" type="redirect">/view/login.jsp</result>
		</global-results>
		<!-- 配置action -->
		
		<!-- 配置usersAction -->
		<!-- 利用了spring的bean作为class -->
		<action name="usersAction" class="usersAction">
			
		</action>
	</package>
	<!-- votes模块的package -->
	<package name="votes-package" namespace="/votes" extends="base-package">
		<!-- 全局的result -->
		<global-results>
			<result name="msg">/view/protected/msg.jsp</result>
			<result name="votesList">/view/protected/votesList.jsp</result>
			<result name="addVotes">/view/protected/addVotes.jsp</result>
			<result name="voteInfo">/view/protected/voteInfo.jsp</result>
			<result name="myVotesList">/view/protected/myVotesList.jsp</result>
			<result name="editVote">/view/protected/editVote.jsp</result>
			
			<result name="rvotesList" type="redirect">/view/protected/votesList.jsp</result>
		</global-results>
		<!-- 配置action -->
		
		<!-- 配置votesAction -->
		<!-- 利用了spring的bean作为class -->
		<action name="votesAction" class="votesAction">
		</action>
	</package>
