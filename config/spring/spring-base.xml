<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.0.xsd
">
	<!-- 自动注入带有注解的bean,例如service和bean -->
	<!-- <context:component-scan base-package="com.zk"></context:component-scan> -->
	<!-- 导入spring和mybatis整合配置文件 -->
	<import resource="./spring-mybatis.xml"/>
	
	<!-- 导入action的bean的配置文件 -->
	<import resource="./spring-beans-action.xml"/>
	
	<!-- 导入service的bean的配置文件 -->
	<import resource="./spring-beans-service.xml"/>
	
	<!-- 导入mapper的bean的配置文件 -->
	<import resource="./spring-beans-mapper.xml"/>
</beans>
